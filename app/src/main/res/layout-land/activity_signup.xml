<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/signup_bar"
        android:layout_marginTop="55dp"
        android:layout_centerHorizontal="true" />
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:id="@+id/rel_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
        <EditText
            android:id="@+id/signup_email"
            android:layout_width="@dimen/sign_inputs_width"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:hint="@string/email_hint"
            android:imeOptions="flagNoExtractUi"
            />
        <EditText
            android:id="@+id/signup_username"
            android:layout_width="@dimen/sign_inputs_width"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="@string/username_hint"
            android:layout_below="@id/signup_email"
            android:imeOptions="flagNoExtractUi"
            />
        <EditText
            android:id="@+id/signup_password"
            android:layout_width="@dimen/sign_inputs_width"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="@string/password_hint"
            android:layout_below="@id/signup_username"
            android:imeOptions="flagNoExtractUi"
            />
        <EditText
            android:id="@+id/signup_repeat_password"
            android:layout_width="@dimen/sign_inputs_width"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="@string/repeat_pass_hint"
            android:layout_below="@id/signup_password"
            android:imeOptions="flagNoExtractUi"
            />
    </RelativeLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/signup_submit"
        android:text="@string/signup_submit"
        android:layout_below="@id/rel_signup"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>