<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/app_primary</item>
        <item name="colorPrimaryDark">@color/app_primaryDark</item>
        <item name="colorAccent">@color/app_accent</item>
        <item name="android:textColorPrimary">@color/app_primary_text</item>
        <item name="android:textColorSecondary">@color/app_secondary_light</item>
        <item name="android:textColor">@color/app_primary_text</item>
        <!--<item name="">@color/app_primaryDark</item>-->
        <!--<item name="colorPrimaryDark">@color/app_primaryDark</item>-->
        <!--<item name="colorPrimaryDark">@color/app_primaryDark</item>-->
    </style>

    <style name="SupportInput">
        <item name="android:layout_width">@dimen/sign_inputs_width</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextInput">
        <item name="android:inputType">text</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:imeOptions">flagNoExtractUi</item>
        <item name="android:textSize">@dimen/font_size_medium</item>
        <item name="android:maxLength">32</item>
    </style>

    <style name="TextInput.PasswordInput">
        <item name="android:inputType">textPassword</item>
        <item name="android:maxLength">16</item>
    </style>

    <style name="TextInput.EmailInput">
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:hint">@string/email_hint</item>
        <item name="android:maxLength">48</item>
    </style>

    <style name="SignRelativeLayout">
        <!--<item name="android:background">@color/md_white_1000</item>-->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <!--<item name="android:elevation">3dp</item>-->
        <!--<item name="android:padding">10dp</item>-->
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="SignSubmit" parent="Base.Widget.AppCompat.Button.Borderless">
        <!--<item name="android:background">@color/md_white_1000</item>-->
        <item name="android:textColor">@color/app_accent</item>
        <item name="android:textSize">@dimen/font_size_medium</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="HeaderLargeContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/mrg_large</item>
        <item name="android:layout_marginStart">@dimen/mrg_large</item>
        <item name="android:layout_marginRight">@dimen/mrg_large</item>
        <item name="android:layout_marginEnd">@dimen/mrg_large</item>

    </style>
    <style name="HeaderLargeText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/mrg_medium</item>
        <item name="android:layout_marginTop">@dimen/mrg_medium</item>
        <item name="android:textSize">@dimen/font_size_xlarge</item>
        <item name="android:textColor">@color/app_accent</item>
    </style>

