<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
android:layout_height="wrap_content">
    <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="188dp"
        android:src="@drawable/menu_header"
        android:scaleType="fitXY"
        android:id="@+id/h_unlogged_bgr" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/h_unlogged_btn_signin"
        android:id="@+id/h_unlogged_btn_signin"

        android:layout_marginBottom="@dimen/mrg_medium"
        android:layout_marginLeft="@dimen/mrg_medium"
        android:layout_marginStart="@dimen/mrg_medium"

        android:layout_alignBottom="@+id/h_unlogged_bgr"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/h_unlogged_btn_signup"
        android:text="@string/h_unlogged_btn_signup"

        android:layout_marginBottom="@dimen/mrg_medium"
        android:layout_marginRight="@dimen/mrg_medium"
        android:layout_marginEnd="6dp"

        android:layout_alignBottom="@+id/h_unlogged_bgr"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>