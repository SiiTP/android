<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.dbtest.ivan.app.activity.DetailReminderActivity">
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/details_author"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/details_time"
        android:layout_alignStart="@+id/details_time"
        android:layout_alignRight="@+id/details_time"
        android:layout_alignEnd="@+id/details_time"
        android:hint="author" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:ems="10"
        android:id="@+id/details_time"
        android:layout_below="@+id/details_author"
        android:layout_centerHorizontal="true"
        android:hint="time" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/details_text"
        android:layout_below="@+id/details_time"
        android:layout_alignRight="@+id/details_time"
        android:layout_alignEnd="@+id/details_time"
        android:layout_alignLeft="@+id/details_time"
        android:layout_alignStart="@+id/details_time"
        android:hint="text"
        android:lines="3" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/details_category"
        android:layout_below="@+id/details_text"
        android:layout_alignLeft="@+id/details_text"
        android:layout_alignStart="@+id/details_text"
        android:layout_alignRight="@+id/details_text"
        android:layout_alignEnd="@+id/details_text"
        android:hint="category name" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        android:id="@+id/details_add"
        android:layout_below="@+id/details_category"
        android:layout_alignLeft="@+id/details_category"
        android:layout_alignStart="@+id/details_category"
        android:layout_alignRight="@+id/details_category"
        android:layout_alignEnd="@+id/details_category" />
</RelativeLayout>
