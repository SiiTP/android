<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content">
    <TextView
        android:layout_width="@dimen/sign_inputs_width"
        android:layout_height="wrap_content"
        android:hint="pick reminder time"
        android:id="@+id/details_picked_date"
        android:layout_marginTop="15dp"

        android:textSize="@dimen/font_size_medium"/>
    <Button
        style="@style/SignSubmit"
        android:text="@string/details_date_pick_button"
        android:layout_toRightOf="@id/details_picked_date"
        android:layout_toEndOf="@id/details_picked_date"
        android:layout_alignRight="@+id/details_add_category_button"
        android:layout_alignEnd="@+id/details_add_category_button"
        android:id="@+id/pick_date_button"
        android:layout_width="@dimen/details_button_width"
        android:layout_height="wrap_content"

        android:layout_marginTop="5dp" />
</RelativeLayout>