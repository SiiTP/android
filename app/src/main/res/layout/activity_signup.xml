<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <View
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign up activity"
        android:id="@+id/signup_textv_small"
        android:textSize="@dimen/font_size_small"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign up activity"
        android:id="@+id/signup_textv_medium"
        android:layout_below="@+id/signup_textv_small"
        android:textSize="@dimen/font_size_medium"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign up activity"
        android:id="@+id/signup_textv_large"
        android:layout_below="@+id/signup_textv_medium"
        android:textSize="@dimen/font_size_large"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign up activity"
        android:id="@+id/signup_textv_xlarge"
        android:layout_below="@+id/signup_textv_large"
        android:textSize="@dimen/font_size_xlarge"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign up activity"
        android:id="@+id/signup_textv_xxlarge"
        android:textSize="@dimen/font_size_xxlarge"
        android:layout_below="@+id/signup_textv_xlarge" />

</RelativeLayout>